<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <MeCabPackageContentPath Condition="'$(MeCabPackageContentPath)' == ''">$([System.IO.Path]::Combine('$(MSBuildThisFileDirectory)','..','content'))</MeCabPackageContentPath>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="$(MeCabPackageContentPath)\dic\*.*">
      <Link>dic\%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
